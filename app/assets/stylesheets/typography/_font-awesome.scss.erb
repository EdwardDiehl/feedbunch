/* Define Font Awesome font family */

@font-face {
  font-family: "FontAwesome";
  src: font-url("<%= asset_path 'font-awesome/fonts/fontawesome-webfont.eot' %>");
  src: font-url("<%= asset_path 'font-awesome/fonts/fontawesome-webfont.eot' %>?#iefix") format('eot'),
    font-url("<%= asset_path 'font-awesome/fonts/fontawesome-webfont.woff' %>") format('woff'),
    font-url("<%= asset_path 'font-awesome/fonts/fontawesome-webfont.woff2' %>") format('woff2'),
    font-url("<%= asset_path 'font-awesome/fonts/fontawesome-webfont.ttf' %>") format('truetype'),
    font-url("<%= asset_path 'font-awesome/fonts/fontawesome-webfont.svg' %>#FontAwesome") format('svg');
  font-weight: normal;
  font-style: normal;
}
