<% content_for :heading do %>
  Feedbunch - <%= t 'devise.views.edit_account' %>
<% end %>

<div class="col-md-offset-1 pull-left">
  <i class="icon-double-angle-left"></i>
  <%= link_to t('devise.views.return'), feeds_path, id: 'return' %>
</div>

<div class="row">
  <div class="col-md-10 col-md-offset-1 well">
    <%= simple_form_for resource, :as => resource_name,
                        :url => profile_path,
                        html: {:method => :put, class: 'form-horizontal', autocomplete: 'off'},
                        wrapper: :prepend do |f| %>
      <%= f.input :email, as: :email_icon, input_html: {autocomplete: 'off'} %>
      <%= f.input :password, as: :password_icon, hint: t('simple_form.hints.user.blank_password'),
                  label: t('devise.views.new_password'),
                  placeholder: t('simple_form.placeholders.user.new_password'),
                  input_html: {autocomplete: 'off'} %>
      <%= f.input :password_confirmation, as: :password_icon,
                  placeholder: t('simple_form.placeholders.user.password_confirmation'),
                  input_html: {autocomplete: 'off'} %>
      <%= f.input :current_password, as: :password_icon,
                  placeholder: t('simple_form.placeholders.user.current_password'),
                  input_html: {autocomplete: 'off'} %>

      <div class="form-actions">
        <%= button_tag type: 'submit', class: 'btn btn-primary btn-lg' do %>
          <i class="icon-save"></i> <%= t 'devise.views.update_account' %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col-md-10 col-md-offset-1 well">
    <h2><%= t 'devise.views.cancel_account' %></h2>
    <p><%= t 'devise.views.cancel_account_text' %></p>
    <%= link_to profile_cancel_path,
                  :data => { :confirm => t('devise.views.cancel_account_confirm') }, :method => :delete,
                  class: 'btn btn-danger' do %>
      <i class="icon-trash"></i>
      <%= t('devise.views.cancel_account') %>
    <% end %>
  </div>
</div>