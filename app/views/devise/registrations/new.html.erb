<% content_for :heading do %>
  Openreader - <%= t 'devise.views.sign_up' %>
<% end %>

<div class="row-fluid">
  <div class="span10 offset1 well">
    <div class="span8">
      <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: {class: 'form-horizontal'}) do |f| %>
        <div class="control-group">
          <%= f.label t('devise.views.email'), class: 'control-label' %>
          <div class="controls">
            <%= f.email_field :email, :autofocus => true %>
          </div>
        </div>

        <div class="control-group">
          <%= f.label t('devise.views.password'), class: 'control-label' %>
          <div class="controls">
            <%= f.password_field :password %>
          </div>
        </div>

        <div class="control-group">
          <%= f.label t('devise.views.password_confirmation'), class: 'control-label' %>
          <div class="controls">
            <%= f.password_field :password_confirmation %>
          </div>
        </div>

        <div class="control-group">
          <div class="controls">
            <%= f.submit t('devise.views.sign_up'), class: 'btn' %>
          </div>
        </div>
      <% end %>
    </div>

    <div class="span4">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
