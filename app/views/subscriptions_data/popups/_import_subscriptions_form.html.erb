<div id="import-subscriptions-popup" class="modal hide fade">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">&times;</button>
    <h3><%= t 'start.import.import_popup_title' %></h3>
  </div>
  <div class="modal-body">
    <div class="alert alert-info">
      <i class="import-popup-info icon-info-sign icon-4x pull-left"></i>
      <div>
        <p><%= t 'start.import.import_popup_help_1' %></p>
        <p><%= t 'start.import.import_popup_help_2_html', google_url: 'https://www.google.com/takeout/#custom:reader' %></p>
        <p><%= t 'start.import.import_popup_help_3' %></p>
      </div>
    </div>
    <hr>
    <%= simple_form_for :import_subscriptions, url: subscriptions_data_path, multipart: true,
                        html: {:method => :post, class: 'form-horizontal', id: 'form-import-subscriptions'},
                        wrapper: :prepend do |f| %>
      <%= f.input :file, as: :file, required: false %>
    <% end %>
  </div>
  <div class="modal-footer">
    <button class="btn" data-dismiss="modal" ><%= t 'start.import.form_close' %></button>
    <button id="import-subscriptions-submit" class="btn btn-primary"><%= t 'start.import.form_submit' %></button>
  </div>
</div>