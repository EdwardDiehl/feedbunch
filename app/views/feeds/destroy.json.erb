<% self.formats = [:html] %>

{
  "all_subscriptions": {
    "sidebar_read_all": <%= render(partial: 'read/sidebar/sidebar_folder_read_all', locals: {user: user, folder: Folder::ALL_FOLDERS}, layout: false).to_json.html_safe %>
  }

  <%
    if old_folder.present?
      old_folder_deleted = old_folder.feeds.blank?
      old_folder_data = {
        id: old_folder.id,
        deleted: old_folder_deleted
      }
      if !old_folder_deleted
        old_folder_data[:sidebar_read_all] = render(partial: 'read/sidebar/sidebar_folder_read_all', locals: {user: user, folder: old_folder}, layout: false)
      end
  %>
  ,
  "old_folder": <%= old_folder_data.to_json.html_safe %>

  <% end %>
}