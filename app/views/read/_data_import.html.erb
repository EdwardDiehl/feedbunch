<div class="col-md-8 alert alert-danger alert-block" ng-show="import_status=='ERROR'">

  <div class="col-md-2">
    <i class="icon-warning-sign icon-4x"></i>
  </div>

  <div class="col-md-10">

    <p><%= t 'start.import.error' %></p>
    <p><a class="alert-link" data-toggle="modal" data-target="#data-import-popup"><%= t 'start.import.retry_1' %></a> <%= t 'start.import.retry_2' %></p>

  </div>

</div>

<div id="data-import-running" class="col-md-8 alert alert-info alert-block" ng-show="import_status=='RUNNING'">

  <div class="col-md-2">
    <i class="icon-cogs icon-4x"></i>
  </div>

  <div class="col-md-10">

    <p><%= t 'start.import.import_running' %></p>
    <p>
      <%= t 'start.import.progress', total: user.data_import.total_feeds,
            processed: user.data_import.processed_feeds %>
    </p>
    <%
       if user.data_import.total_feeds == 0
         progress = 0
       else
         progress = 100 * user.data_import.processed_feeds / user.data_import.total_feeds
       end
    %>
    <div class="progress progress-striped">
      <div class="progress-bar" style="width: <%= progress %>%;">
        <span class="sr-only"><%= progress %></span>
      </div>
    </div>
    <p><%= t 'start.import.import_background' %></p>

  </div>

</div>


<div class="col-md-8 alert alert-success alert-block" ng-show="import_status=='SUCCESS'">

  <div class="col-md-2">
    <i class="icon-thumbs-up-alt icon-4x"></i>
  </div>

  <div class="col-md-10">

    <p><%= t 'start.import.success' %></p>
    <p><a class="alert-link" data-toggle="modal" data-target="#data-import-popup"><%= t 'start.import.retry_1' %></a> <%= t 'start.import.retry_2' %></p>

  </div>

</div>


<div class="col-md-8 alert alert-warning alert-block" ng-show="import_status=='NONE'">

  <div class="col-md-2">
    <i class="icon-magic icon-4x"></i>
  </div>

  <div class="col-md-10">

    <p><%= t 'start.import.introduction' %></p>
    <ol class="icons-ul">
      <li>
        <i class="icon-angle-right"></i>
        <%= t 'start.import.download_data_html', google_url: 'https://www.google.com/takeout/#custom:reader' %>
      </li>
      <li>
        <i class="icon-angle-right"></i>
        <a id="start-data-import"
           class="btn btn-default"
           data-toggle="modal"
           data-target="#data-import-popup"><%= t 'start.import.import_data_1' %></a><%= t 'start.import.import_data_2' %>
      </li>
    </ol>

  </div>

</div>