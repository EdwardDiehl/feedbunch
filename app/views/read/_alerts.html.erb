<%# Alert displayed when there is a problem refreshing feeds %>
<div id="problem-refreshing" ng-show="error_refreshing_feed">
  <div class="alert alert-danger">
    <button type="button" class="close" ng-click="reset_flag('error_refreshing_feed')">&times;</button>
    <p><%= t 'feeds.index.problem_refreshing' %></p>
  </div>
</div>

