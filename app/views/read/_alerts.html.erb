<%# Alert displayed when the feed selected has no entries %>
<div id="no-entries" class="hidden">
  <div class="alert alert-warning">
    <button type="button" class="close" data-hide>&times;</button>
    <p><%= t 'feeds.index.no_entries' %></p>
    <p><em><%= t 'layouts.application.closing_timer_html' %></em></p>
  </div>
</div>

<%# Alert displayed when there is a problem refreshing feeds %>
<div id="problem-refreshing" class="hidden">
  <div class="alert alert-danger">
    <button type="button" class="close" data-hide>&times;</button>
    <p><%= t 'feeds.index.problem_refreshing' %></p>
    <p><em><%= t 'layouts.application.closing_timer_html' %></em></p>
  </div>
</div>

<%# Alert displayed when there is a problem loading feeds %>
<div id="problem-loading" class="hidden">
  <div class="alert alert-danger">
    <button type="button" class="close" data-hide>&times;</button>
    <p><%= t 'feeds.index.problem_loading' %></p>
    <p><em><%= t 'layouts.application.closing_timer_html' %></em></p>
  </div>
</div>

<%# Alert displayed when there is a problem adding a subscription %>
<div id="problem-subscribing" ng-show="error_subscribing">
  <div class="alert alert-danger">
    <button type="button" class="close" data-hide>&times;</button>
    <p><%= t 'feeds.index.problem_subscribing' %></p>
  </div>
</div>

<%# Alert displayed when the user tries to subscribe to a feed he's already subscribed to %>
<div id="already-subscribed" ng-show="error_already_subscribed">
  <div class="alert alert-warning">
    <button type="button" class="close" data-hide>&times;</button>
    <p><%= t 'feeds.index.already_subscribed' %></p>
  </div>
</div>

<%# Alert displayed when there is a problem unsubscribing from a feed %>
<div id="problem-unsubscribing" ng-show="error_unsubscribing">
  <div class="alert alert-danger">
    <button type="button" class="close" data-hide>&times;</button>
    <p><%= t 'feeds.index.problem_unsubscribing' %></p>
  </div>
</div>

<%# Alert displayed when there is a problem adding or removing a feed from a folder %>
<div id="problem-folder-management" ng-show="error_managing_folders">
  <div class="alert alert-danger">
    <button type="button" class="close" data-hide>&times;</button>
    <p><%= t 'feeds.index.problem_folder_management' %></p>
  </div>
</div>

<%# Alert displayed when there is a problem adding a feed to a new folder %>
<div id="problem-new-folder" class="hidden">
  <div class="alert alert-danger">
    <button type="button" class="close" data-hide>&times;</button>
    <p><%= t 'feeds.index.problem_new_folder' %></p>
    <p><em><%= t 'layouts.application.closing_timer_html' %></em></p>
  </div>
</div>

<%# Alert displayed when the user tries to create a folder with the same title of another of his folders %>
<div id="folder-already-exists" class="hidden">
  <div class="alert alert-warning">
    <button type="button" class="close" data-hide>&times;</button>
    <p><%= t 'feeds.index.folder_already_exists' %></p>
    <p><em><%= t 'layouts.application.closing_timer_html' %></em></p>
  </div>
</div>

<%# Alert displayed when there is a problem changing an entry's read/unread state %>
<div id="problem-entry-state-change" class="hidden">
  <div class="alert alert-danger">
    <button type="button" class="close" data-hide>&times;</button>
    <p><%= t 'feeds.index.problem_entry_state' %></p>
    <p><em><%= t 'layouts.application.closing_timer_html' %></em></p>
  </div>
</div>