<%= javascript_include_tag 'fallback' %>
<%= javascript_include_tag 'fallback_js/load_libraries' %>

<% cache 'footer_social_js' do %>

  <%# Facebook SDK for javascript initialization %>
  <script>
    window.fbAsyncInit = function() {
      FB.init({
        appId      : <%= Rails.application.secrets.facebook_app_ID %>,
        version    : 'v2.0'
      });
    };

    (function(d, s, id){
      var js, fjs = d.getElementsByTagName(s)[0];
      if (d.getElementById(id)) {return;}
      js = d.createElement(s); js.id = id;
      js.src = "//connect.facebook.net/en_US/sdk.js";
      fjs.parentNode.insertBefore(js, fjs);
    }(document, 'script', 'facebook-jssdk'));
  </script>

  <%= javascript_include_tag '//platform.twitter.com/widgets.js' %>

<% end %>

<%= render 'layouts/noscript_warning' %>