<div id="data-import-popup" class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h3><%= t 'start.import.import_popup_title' %></h3>
      </div>
      <div class="modal-body">
        <div class="alert alert-info">
          <div class="row">
            <div class="col-xs-2">
              <i class="import-popup-info icon-info-sign icon-4x"></i>
            </div>
            <div class="col-xs-10">
              <p><%= t 'start.import.import_popup_help_1' %></p>
              <p><%= t 'start.import.import_popup_help_2' %></p>
            </div>
          </div>
        </div>
        <hr>

        <%= simple_form_for :data_import, url: data_imports_path, multipart: true,
                            html: {:method => :post, id: 'form-data-import'} do |f| %>
          <%= f.input :file, as: :file, required: false %>
          <div class="modal-footer">
            <button id="data-import-cancel" class="btn btn-default" data-dismiss="modal" ><%= t 'start.import.form_close' %></button>
            <button id="data-import-submit" class="btn btn-primary"><%= t 'start.import.form_submit' %></button>
          </div>
        <% end %>

      </div>

    </div>
  </div>
</div>