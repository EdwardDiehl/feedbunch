{
  "id": "<%= entry.id %>",
  "title": <%= entry.title.to_json.html_safe %>,
  "read": <%= entry.read_by? user %>,
<% if entry.published.present? %>
  "published": "<%= l entry.published, format: :short %>",
  "published_seconds": <%= entry.published.to_i %>,
<% end %>
  "url": "<%= entry.url %>",
  "guid": "<%= entry.guid %>",
  "content": <%= entry.content.try(:to_json).html_safe %>,
  "summary": <%= entry.summary.try(:to_json).html_safe %>,
  "feed_id": "<%= entry.feed_id %>"
}