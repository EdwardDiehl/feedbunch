<% self.formats = [:html] %>

{
    "folder_all": {
        "sidebar_read_all": <%= render(partial: 'read/sidebar/sidebar_folder_read_all',
                                locals: {user: user, folder: Folder::ALL_FOLDERS}, layout: false).to_json.html_safe %>
    }

<% if feeds.present? %>
  <%
    feeds_json = []
    feeds.each do |feed|
      feed_json = {}
      feed_json[:id] = feed.id
      feed_json[:sidebar] = render('read/sidebar/sidebar_feed', user: user, feed: feed)
      feeds_json << feed_json
    end
  %>

    , "feeds": <%= feeds_json.to_json.html_safe %>

<% end %>

<% if folders.present? %>
  <%
    folders_json = []
    folders.each do |folder|
      folder_json = {}
      folder_json[:id] = folder.id
      folder_json[:sidebar_read_all] = render(partial: 'read/sidebar/sidebar_folder_read_all',
                                locals: {user: user, folder: folder}, layout: false)
      folders_json << folder_json
    end
  %>

    , "folders": <%= folders_json.to_json.html_safe %>

<% end %>

}
